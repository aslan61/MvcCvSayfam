@using MvcCvSayfam.Models.Entity
@model List<Sertifikalarım>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ String renk = "";}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                            <ul class="nav nav-pills">

                            </ul>
                        </div><!-- /.card-header -->
                        <div class="card-body">
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                       @foreach(var item in Model) {
                                            if (@item.ID % 2 == 0)
                                            {renk = "btn btn-success"; }
                                            if (@item.ID % 2 != 0)
                                            {renk = "btn btn-primary"; }
                                            <div class="time-label">
                                                <a href="/Sertifika/SertifikaGetir/@item.ID" class="@renk">
                                                    <span class="@renk">
                                                        @item.Tarih
                                                    </span>
                                                </a>
                                            </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            <i class="fas fa-comment bg-primary"></i>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.Aciklama
                                                </div>
                                            </div>
                                        </div>
                                       }
                                    </div>
                                    <a href="/Sertifika/YeniSertifika/" class="btn btn-info">Yeni Sertifika Ekle</a>
                                </div>
                            </div>
                        </div><!-- /.card-body -->
                    </div>
                </div>
            </div>
    </section>
</body>
</html>